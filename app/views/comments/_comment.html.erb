

<div class="row">
  <div class="col-md-2">
    <section class="chef_info center">
      <%= gravatar_for(comment.chef, size:  40) %>
    </section>
  </div>
  <div class="col-md-8 well">
      <p><%= comment.description %></p>
      <p>
        <span class="quiet"><small>Created
